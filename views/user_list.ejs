<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h1 class="mb-4">User List</h1>

  <div class="mb-3">
    <a href="/logout" class="btn btn-outline-secondary me-2">로그아웃</a>
    <a href="/posts" class="btn btn-primary">게시판으로 이동</a>
  </div>

  <ul class="list-group mb-4">
    <% users.forEach(user => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= user.name %></strong> - <%= user.email %>
        </div>
        <form action="/users/delete/<%= user._id %>" method="post" class="mb-0">
          <button type="submit" class="btn btn-sm btn-danger">삭제</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <h2>사용자 추가</h2>
  <form action="/users/add" method="post" class="mb-5">
    <div class="mb-2">
      <input type="text" name="name" placeholder="Name" class="form-control" required>
    </div>
    <div class="mb-2">
      <input type="email" name="email" placeholder="Email" class="form-control" required>
    </div>
    <div class="mb-2">
      <input type="password" name="password" placeholder="Password" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">추가</button>
  </form>
</body>
</html>
