<!DOCTYPE html>
<html lang="ko">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5">
    <h2 class="mb-4">사용자 목록</h2>

    <form action="/add" method="POST" class="mb-3">
        <div class="row">
            <div class="col"><input class="form-control" name="name" placeholder="이름" required></div>
            <div class="col"><input class="form-control" name="email" placeholder="이메일" required></div>
            <div class="col-auto"><button class="btn btn-primary">추가</button></div>
        </div>
    </form>

    <table class="table table-bordered">
        <thead><tr><th>이름</th><th>이메일</th><th>수정</th><th>삭제</th></tr></thead>
        <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><a class="btn btn-sm btn-warning" href="/edit/<%= user._id %>">수정</a></td>
          <td>
            <form action="/delete/<%= user._id %>" method="POST" onsubmit="return confirm('삭제할까요?')">
              <button class="btn btn-sm btn-danger">삭제</button>
            </form>
          </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
</body>
</html>