<!-- 📄 views/postDetail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= post.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-5">
    <a href="/posts" class="btn btn-outline-secondary mb-4">← 게시판으로 돌아가기</a>

    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title"><%= post.title %></h2>
        <p class="card-text mt-4"><%= post.content %></p>
        <p class="text-muted mt-3">작성자: <%= post.author?.name || '알 수 없음' %></p>
      </div>
    </div>
  </div>

</body>
</html>
